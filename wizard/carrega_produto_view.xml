<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="carrega_produto_form_view" model="ir.ui.view">
        <field name="name">Produto Desejado</field>
        <field name="model">carrega.produto</field>
        <field name="arch" type="xml">
            <form>
                <group>
                    <group>
                        <field name="desejado_id"/>
                        <field name="type"/>
                        <field name="barcode"/>
                        <field name="qnt_desejado" invisible="1"/>
                        <field name="produtos_cotados" invisible="True"/>
                    </group>
                    <group>
                        <field name="img" widget="image" nolabel="1" width="200px" />
                    </group>
                </group>
                <footer>
                    <button string="Ver Preço" name="cotar_acessorio" type="object" attrs="{'invisible':[('qnt_desejado','&lt;',1)]}"/>
                    <button string="Ver Preço" name="cotar_sem_estoque" type="object" attrs="{'invisible':[('qnt_desejado','>',0)]}"/>
                    <button name="naocotar" string="Fechar" type="object" />
                </footer>
            </form>
        </field>
    </record>
    <record id="carrega_produto_action" model="ir.actions.act_window">
        <field name="name">Produto Desejado</field>
        <field name="res_model">carrega.produto</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>
</odoo>