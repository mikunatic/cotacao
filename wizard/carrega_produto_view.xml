<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="carrega_produto_form_view" model="ir.ui.view">
        <field name="name">Produto Desejado</field>
        <field name="model">carrega.produto</field>
        <field name="arch" type="xml">
            <form>
                <group>
                    <field name="desejado_id"/>
                    <field name="type"/>
                    <field name="barcode"/>
                    <field name="qnt_desejado" invisible="True"/>
                    <field name="produtos_cotados" invisible="True"/>

                </group>
                <group>
                    <!--<label for="alternativo" attrs="{'invisible':[('qnt_desejado','>',0)]}"/>
                    <div class="o_row">
                        <field name="alternativo" string="Produto Alternativo" attrs="{'invisible':[('qnt_desejado','>',0)]}" options="{'no_create': True, 'no_create_edit':True, 'no_open':True}"/>
                        <button name="cotar_alt" type="object" string="Mostrar" attrs="{'invisible':[('alternativo','=',False)]}"/>
                    </div>
                    <field name="type_alt" attrs="{'invisible':[('alternativo','=',False)]}"/>
                    <field name="barcode_alt" attrs="{'invisible':[('alternativo','=',False)]}"/>
                    <field name="acessorio_ids" invisible="True"/>
                    <field name="acessorio" string="Produtos Acessórios" attrs="{'invisible':[('qnt_desejado','&lt;',1)]}" options="{'no_create': True, 'no_create_edit':True, 'no_open':True}"/>-->
                </group>
                <footer>
                    <button string="Ver Preço" name="cotar_acessorio" type="object" attrs="{'invisible':[('qnt_desejado','&lt;',1)]}"/>
                    <button string="Ver Preço Sem Estoque" name="cotar_sem_estoque" type="object" attrs="{'invisible':[('qnt_desejado','>',0)]}"/>
                    <button name="naocotar" string="Fechar" type="object"/>
                </footer>
            </form>
        </field>
    </record>
    <record id="carrega_produto_action" model="ir.actions.act_window">
        <field name="name">Produto Desejado</field>
        <field name="res_model">carrega.produto</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>
</odoo>