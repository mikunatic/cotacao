<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="carrega_produto_form_view" model="ir.ui.view">
        <field name="name">Produto Desejado</field>
        <field name="model">carrega.produto</field>
        <field name="arch" type="xml">
            <form>
                <group>
                    <field name="desejado_id"/>
                    <field name="type"/>
                    <field name="barcode"/>
                    <field name="produtos_cotados" invisible="True"/>
                </group>
                <group>
                    <field name="alternativo" string="Produto Alternativo" attrs="{'invisible':[('alternativo','=',False)]}"/>
                    <field name="type_alt" attrs="{'invisible':[('alternativo','=',False)]}"/>
                    <field name="barcode_alt" attrs="{'invisible':[('alternativo','=',False)]}"/>
                </group>
                <group>
                    <field name="acessorio_ids" invisible="True"/>
                    <field name="acessorio" string="Produtos Acessórios"/>
                </group>
                <footer>
                    <button string="Ver Preço" name="cotar" type="object"/>
                    <button name="naocotar" string="Fechar" type="object"/>
                </footer>
            </form>
        </field>
    </record>
    <record id="carrega_produto_action" model="ir.actions.act_window">
        <field name="name">Produto Desejado</field>
        <field name="res_model">carrega.produto</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>
</odoo>