<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="carrega_produto_form_view" model="ir.ui.view">
        <field name="name">Produto Desejado</field>
        <field name="model">carrega.produto</field>
        <field name="arch" type="xml">
            <form>
                <group>
                    <field name="desejado_id"/>
                    <field name="type"/>
                    <field name="barcode"/>
                    <field name="qnt_desejado" force_save="1"/>
                    <field name="produtos_cotados" invisible="True"/>
                    <field name="qnt_a_levar" force_save="1"/>
<!--                    <field name="bool" invisible="True"/>-->
                </group>
                <footer>
                    <button string="Ver Preço" name="cotar_acessorio" type="object" /><!--attrs="{'invisible':[('bool','=',True)]}"-->
                    <button string="Ver Preço Sem Estoque" name="cotar_sem_estoque" type="object" />
                    <button name="naocotar" string="Fechar" type="object" />
                </footer>
            </form>
        </field>
    </record>
    <record id="carrega_produto_action" model="ir.actions.act_window">
        <field name="name">Produto Desejado</field>
        <field name="res_model">carrega.produto</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>
</odoo>