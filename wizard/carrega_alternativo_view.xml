<odoo>
    <record id="carrega_alternativo_form_view" model="ir.ui.view">
        <field name="name">Carrega Alternativo</field>
        <field name="model">carrega.alternativo</field>
        <field name="arch" type="xml">
            <form>
                <group>
                    <field name="partner_id"/>
                    <field name="data_vencimento"/>
                    <field name="desejado_id"/>
                    <field name="produtos_cotados"/>
                    <field name="variante"/>
                    <field name="alternativo_ids"/>
                    <field name="alternativo"/>
                </group>
                <footer>
<!--                    -->
                </footer>
            </form>
        </field>
    </record>
    <record id="alternativo_action" model="ir.actions.act_window">
        <field name="name">Alternativo</field>
        <field name="res_model">carrega.alternativo</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>
</odoo>